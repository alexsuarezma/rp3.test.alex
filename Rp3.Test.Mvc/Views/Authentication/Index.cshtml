@model Rp3.Test.Mvc.Models.PersonViewModel
@{
    ViewBag.Title = "Authentication page";
}

<div class="container">
    <div style="display:flex; justify-content:center;">
        <div class="row" style="margin-top: 100px; width: 100%;">
            @using (Html.BeginForm("Index", "Authentication", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                    <div class="form-group col-md-12">
                        <label for="transaction_type_id">Persona</label>
                        @Html.DropDownList("PersonId", new SelectList(ViewBag.Persons, "PersonId", "Name"), "Please select", new { @class = "form-control", @required = "true" })
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </div>

            }
        </div>
    </div>
</div>
