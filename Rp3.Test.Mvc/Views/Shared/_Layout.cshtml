<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        ViewBag.Person = Session["Person"];
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div style="width: 100%; display: flex; justify-content: space-between;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MVC TEST", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div style="display: flex; align-items:center; gap: 0px 15px;">
                @if (ViewBag.Person != null)
                {
                    <span style="color: white;">@ViewBag.Person.Name</span>
                    <a class="btn btn-light" href="@Url.Action("closeSesion","Home")">Cambiar Persona</a>
                }
            </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/transaction.js")
    @RenderSection("scripts", required: false)
</body>
</html>
